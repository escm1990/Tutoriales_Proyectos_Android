<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="431dp"
        android:layout_height="504dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/mangos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#8BC34A"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/mangos" />

            <ImageButton
                android:id="@+id/manzanas"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/manzanas" />

            <ImageButton
                android:id="@+id/uvas"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#8BC34A"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/uvas" />

            <ImageButton
                android:id="@+id/sandia"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/sandia" />

            <ImageButton
                android:id="@+id/pina"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#8BC34A"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/pina" />

            <ImageButton
                android:id="@+id/pera"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/pera" />

            <ImageButton
                android:id="@+id/zarzamora"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#8BC34A"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/zarzamora" />

            <ImageButton
                android:id="@+id/cerezas"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/cerezas" />

            <ImageButton
                android:id="@+id/naranja"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#8BC34A"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/naranjas" />

            <ImageButton
                android:id="@+id/frambuesas"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/frambuesas" />

            <ImageButton
                android:id="@+id/bananas"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#8BC34A"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/bananas" />

            <ImageButton
                android:id="@+id/melon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/melon" />

            <ImageButton
                android:id="@+id/kiwis"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#8BC34A"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/kiwis" />

            <ImageButton
                android:id="@+id/fresas"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descripcion"
                android:onClick="seleccion"
                app:srcCompat="@mipmap/fresas" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>